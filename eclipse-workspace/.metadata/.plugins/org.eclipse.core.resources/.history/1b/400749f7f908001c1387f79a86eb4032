package com.ellen.loja1.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.ellen.loja1.controller.dto.ProdutoDto;
import com.ellen.loja1.reporitory.ProdutoRepository;
import com.ellen.loja1.service.ProdutoService;

@RestController
public class ProdutoController {
	
	ProdutoService produtoService = new ProdutoService();
	@Autowired 
	public ProdutoRepository produtoRepository;
	
	@RequestMapping ("/")
	public String iniciar() {
		return "Welcome to Palikir";
	}
	
	
	@RequestMapping ("/produtos")
	public List<ProdutoDto> produtos() {
		return ProdutoDto.converter(produtoRepository.findAll());
				
	}

}
